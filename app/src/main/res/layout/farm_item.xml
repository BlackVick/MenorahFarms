<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/farm_item_bacground"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginBottom="13dp"
    android:layout_height="wrap_content"
    app:corner_radius="11dp"
    android:elevation="6dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/menorah_placeholder"
        android:scaleType="centerCrop"
        android:id="@+id/farmImage"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmImage"
        android:id="@+id/farmType"
        android:text="Poultry"
        android:textColor="@color/black"
        android:padding="2dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmType"
        android:id="@+id/farmLocation"
        android:text="lagos"
        android:textColor="@color/grey"
        android:padding="1dp"
        android:textSize="13sp"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmLocation"
        android:id="@+id/farmPackage"
        android:text="Student"
        android:textColor="@color/packageName"
        android:padding="1dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmPackage"
        android:id="@+id/farmUnitPrice"
        android:text="N 20,000"
        android:textColor="@color/colorPrimary"
        android:padding="1dp"
        android:textSize="17sp"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmUnitPrice"
        android:id="@+id/farmROI"
        android:text="Returns 40% in 5 Months"
        android:textColor="@color/black"
        android:padding="1dp"
        android:textSize="16sp"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmROI"
        android:id="@+id/farmName"
        android:text="AcadaCash (Poultry)"
        android:textColor="@color/offBlack"
        android:padding="1dp"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="15dp"/>

</com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


