<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/farm_item_bacground"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginBottom="13dp"
    android:layout_height="wrap_content"
    app:corner_radius="11dp"
    android:elevation="6dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/menorah_placeholder"
        android:scaleType="centerCrop"
        android:id="@+id/farmImage"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmImage"
        android:id="@+id/farmType"
        android:text=""
        android:textColor="@color/black"
        android:padding="1dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/proxima_nova_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmType"
        android:id="@+id/farmLocation"
        android:text=""
        android:textColor="@color/grey"
        android:padding="1dp"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/proxima_nova_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmLocation"
        android:id="@+id/farmPackage"
        android:text=""
        android:textColor="@color/packageName"
        android:padding="1dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/proxima_nova_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmPackage"
        android:id="@+id/farmUnitPrice"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:padding="1dp"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/proxima_nova_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmUnitPrice"
        android:id="@+id/farmROI"
        android:text=""
        android:textColor="@color/packageName"
        android:padding="1dp"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/proxima_nova_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmROI"
        android:id="@+id/farmName"
        android:text=""
        android:textColor="@color/offBlack"
        android:padding="1dp"
        android:textSize="13sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/proxima_nova_regular"/>

</com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


