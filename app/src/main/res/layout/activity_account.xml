<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivities.Account"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:weightSum="10"
            android:id="@+id/userLayout">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="match_parent"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_circle_background_color="@color/white"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="0.5dp"
                    android:src="@drawable/profile"
                    android:id="@+id/userAvatar"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:id="@+id/userFullName"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:id="@+id/userEmail"
                    android:layout_marginTop="6dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wire_button_frame"
                    android:text="Change Password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_margin="3dp"
                    android:id="@+id/changePasswordButton"
                    android:visibility="invisible"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sponsorship History"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:id="@+id/userHistory"
                    android:layout_marginTop="4dp"
                    android:padding="1dp"
                    android:drawableEnd="@drawable/ic_menorah_forward_icon_black"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"/>-->

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="3dp"
                android:id="@+id/cartButton"
                android:src="@drawable/ic_menorah_cart_green"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userLayout"
            android:background="@drawable/login_back_from_bottom"
            android:layout_marginTop="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/verifiedLayout"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:id="@+id/profileProgressText"/>

                    <ProgressBar
                        android:id="@+id/profileProgress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginEnd="45dp"
                        android:progressDrawable="@drawable/progress_drawable"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/black"/>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="14dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/personalDetailsLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_personal_details"
                                    android:padding="15dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Personal Details"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/contactDetailsLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_contact_details"
                                    android:padding="15dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact Details"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/bankDetailsLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_bank_details"
                                    android:padding="15dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bank Details"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="18dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/nextOfKinLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_next_of_kin"
                                    android:padding="15dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Next Of Kin Details"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/socialMediaLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_social_details"
                                    android:padding="15dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Social Media Details"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/studentProfileLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_faq"
                                    android:padding="10dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Student Details"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="18dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/historyLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_personal_details"
                                    android:padding="15dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="History"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/logOutLayout">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="7dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/offWhite"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_menorah_logout"
                                    android:padding="15dp"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Log Out"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_margin="6dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/unverifiedLayout">



                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/snippet_for_bottom_nav"/>

</RelativeLayout>