            android:screenOrientation="portrait" />
        <activity
            android:name=".DashboardMenu.FollowedFarms"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivities.Account"
            android:configChanges="orientation"
