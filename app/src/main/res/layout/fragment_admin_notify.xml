<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFragments.AdminNotify">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/announcementStyle"
                android:weightSum="2"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/single"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Farms"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/all"/>

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="19sp"
                android:padding="15dp"
                android:background="@drawable/edittext_ring"
                android:drawableStart="@drawable/ic_user_email"
                android:drawablePadding="6dp"
                android:hint="User Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/grey"
                android:id="@+id/userEmail"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/topicSpinner"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_ring"
                android:visibility="gone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="19sp"
                android:padding="15dp"
                android:background="@drawable/edittext_ring"
                android:drawableStart="@drawable/ic_notifications"
                android:drawablePadding="6dp"
                android:hint="Notification Topic"
                android:textColorHint="@color/grey"
                android:id="@+id/notificationTopic"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="15dp"
                android:background="@drawable/edittext_ring"
                android:drawableStart="@drawable/ic_notifications"
                android:drawablePadding="6dp"
                android:maxLength="35"
                android:hint="Message"
                android:textColorHint="@color/grey"
                android:id="@+id/notificationMessage"
                android:minLines="5"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/new_login_button"
                android:text="SEND BROADCAST"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/sendNotificationBtn"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>