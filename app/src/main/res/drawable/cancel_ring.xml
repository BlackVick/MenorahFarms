    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/red"
    tools:targetApi="o">

    <item>

        <shape android:shape="rectangle">

            <solid android:color="@color/transparent"/>

            <corners
                android:radius="16dp"
