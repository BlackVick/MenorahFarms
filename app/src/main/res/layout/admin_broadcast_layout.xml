<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Broadcast To All"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:gravity="center"
            android:fontFamily="@font/proxima_nova_bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/view_back"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_ring"
            android:drawableStart="@drawable/ic_notifications"
            android:drawablePadding="6dp"
            android:hint="Title"
            android:textColorHint="@color/grey"
            android:id="@+id/broadcastTopic"
            android:fontFamily="@font/proxima_nova_regular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="15dp"
            android:background="@drawable/edittext_ring"
            android:drawableStart="@drawable/ic_notifications"
            android:drawablePadding="6dp"
            android:hint="Message"
            android:textColorHint="@color/grey"
            android:id="@+id/broadcastMessage"
            android:minLines="4"
            android:inputType="textCapSentences|textMultiLine"
            android:fontFamily="@font/proxima_nova_regular"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/sendBroadcastBtn"
            android:text="SEND BROADCAST"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/new_login_button"
            android:fontFamily="@font/proxima_nova_bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>